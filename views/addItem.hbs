<h2>Add a New Item</h2>
<form method="post" action="/items/add" enctype="multipart/form-data">
    <fieldset>
        <legend>Feature Image</legend>
        <div class="form-group">
            <input class="form-control" id="featureImage" name="featureImage" type="file" />
        </div>
    </fieldset>
    <br />
    <fieldset>
        <legend>Post Content</legend>
        <div class="form-group">
            <label for="title">Item Name:</label>
            <input class="form-control" id="title" name="title" type="text" required />
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            <input class="form-control" id="price" name="price" type="text" required />
        </div>
        <div class="form-group">
            <label for="body">Description:</label>
            <textarea class="form-control" id="body" name="body" rows="5" required></textarea>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="category">Category:</label>
                    {{#if categories}}
                        <select class="form-control" name="category" id="category">
                            <option value="">Select Category</option>
                            {{#each categories}}
                                <option value="{{id}}">{{category}}</option>
                            {{/each}}
                        </select>
                    {{else}}
                        <div>No Categories</div>
                    {{/if}}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="published">Visibility:</label>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="published" id="published" /> Published
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    <hr />
    <button type="submit" class="btn btn-primary">Add Item</button>
</form>