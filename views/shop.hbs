<div class="row">
    <div class="col-md-8">
        {{#if data.item}}
            <article>
                <h2>{{data.item.title}}</h2>
                <img src="{{data.item.featureImage}}" class="img-fluid" alt="Feature Image" style="width:100%">
                <br /><br />
                {{{safeHTML data.item.body}}}
                <br /><br />
                <strong>Price:</strong> ${{data.item.price}}<br />
                <strong>Category:</strong> {{data.item.category}}<br />
                <strong>Last Updated:</strong> {{data.item.postDate}}
            </article>
        {{else}}
            <div class="col-md-12 text-center">
                <h2>{{data.message}}</h2>
                <p>Please try another Post / Category</p>
            </div>
        {{/if}}
    </div>
    <div class="col-md-4">
        {{#if data.items}}
            <h4>Items</h4>
            <ul class="list-group">
                {{#each data.items}}
                    <a href="/shop?category={{this.category}}" class="list-group-item">{{this.title}}</a>
                {{/each}}
            </ul>
        {{/if}}

        {{#if data.categories}}
            <h4>Categories</h4>
            <ul class="list-group">
                {{#each data.categories}}
                    <a href="/shop?category={{this.id}}" class="list-group-item">{{this.category}}</a>
                {{/each}}
            </ul>
        {{/if}}
    </div>
</div>